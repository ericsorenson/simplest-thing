{
  "compilerOptions": {
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    }
  },
  "typeAcquisition": {
    "enable": true
  }
}
